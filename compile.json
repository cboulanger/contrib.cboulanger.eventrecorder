{
  "targets": [
    {
      "type": "source",
      "outputPath": "compiled/source",
      "bundle": {
        "include": "qx.*"
      }
    },
    {
      "type": "build",
      "outputPath": "compiled/build"
    }
  ],
  "defaultTarget": "source",
  "locales": ["en"],
  "environment": {
    "qx.icontheme": ["Tango"],
    "qx.debug": true,
    "module.objectid": true,
    "eventrecorder.enabled": true,
//    "eventrecorder.scriptable": false,
//    "eventrecorder.mode": "presentation",
//    "eventrecorder.showProgress": false,
//    "eventrecorder.gistId": "",
//    "eventrecorder.autoplay": false,
    "qx.testNameSpace": {},
    "qx.standaloneAutorun": {}
  },
  "applications": [
    {
      "class": "cboulanger.eventrecorder.demo.Application",
      "theme": "cboulanger.eventrecorder.theme.Theme",
      "name": "eventrecorder",
      "title": "Simple event recorder demo",
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.UiController"
      ],
      "environment": {
        "eventrecorder.scriptable": true,
        "eventrecorder.gistId": "64ed4149a27d48de38d9cb176907355e",
        "eventrecorder.autoplay": true
      }
    },
    {
      "class": "qxl.widgetbrowser.Application",
      "theme": "qx.theme.Indigo",
      "name": "widgetbrowser_recorder",
      "title": "WidgetBrowser with event recorder",
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdGenerator"
      ],
      "environment": {
        "qx.icontheme": ["Tango" ],
        "eventrecorder.showProgress": true
      }
    },
    {
      "class": "qxl.widgetbrowser.Application",
      "theme": "qx.theme.Indigo",
      "name": "widgetbrowser_tooltip",
      "title": "WidgetBrowser with object id tooltip to debug events",
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.ObjectIdGenerator",
        "cboulanger.eventrecorder.ObjectIdTooltip"
      ],
      "environment": {
        "qx.icontheme": ["Tango"]
      }
    },
    {
      "class": "qxl.playground.Application",
      "theme": "qxl.playground.theme.Theme",
      "name": "playground",
      "title": "Playground in presentation mode",
      "include": [
        "qx.*",
        "qxl.logpane.*",
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdGenerator"

      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement",
        "qx.dev.unit.*"
      ],
      "environment": {
        "environment": {
          "qx.debug" : true,
          "qx.debug.ui.queue" : true,
          "qx.nativeScrollBars" : true,
          "qx.allowUrlSettings" : true,
          "qx.mobile.emulatetouch" : true,
          "qx.icontheme": ["Tango"]
        }
      }
    },
    {
      "class": "qxl.apiviewer.Application",
      "theme": "qxl.apiviewer.Theme",
      "name": "apiviewer",
      "title": "Qooxdoo API Viewer",
      "environment": {
        "excludeFromAPIViewer": [
          "qxl.apiviewer.*"
        ]
      },
      "include": [
        "qx.*"
      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement",
        "qx.dev.unit.*"
      ]
    }
  ]
}
