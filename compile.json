{
  "$schema": "https://raw.githubusercontent.com/qooxdoo/qooxdoo-compiler/master/source/resource/qx/tool/schema/compile-1-0-0.json",
  "targets": [
    {
      "type": "source",
      "outputPath": "compiled/source",
      "babelOptions": {
        "targets": "Chrome >= 73, Firefox >= 66, edge >= 18, safari >= 12"
      },
      "bundle": {
        "include": [
          "qx.*",
          "qxl.*",
          "qookery.*"
        ]
      }
    },
    {
      "type": "build",
      "outputPath": "compiled/build",
      "babelOptions": {
        "targets": "Chrome >= 73, Firefox >= 66, edge >= 18, safari >= 12"
      },
      "minify": "off"
    }
  ],
  "defaultTarget": "source",
  "locales": [
    "en"
  ],
  "include": [
    "qookery.*",
    "qookery.ace.*"
  ],
  "environment": {
    "qx.icontheme": [
      "Tango"
    ],
    "qx.debug": true,
    "module.objectid": true,
    "eventrecorder.enabled": true,
    "eventrecorder.scriptable": false,
    "eventrecorder.hidden": false,
    "eventrecorder.player_type": "qooxdoo",
    "eventrecorder.player_mode": "presentation",
    "eventrecorder.show_progress": false,
    "eventrecorder.gist_id": "",
    "eventrecorder.autoplay": false
  },
  "applications": [
    {
      "default": true,
      "class": "cboulanger.eventrecorder.demo.Application",
      "theme": "cboulanger.eventrecorder.theme.Theme",
      "name": "eventrecorder",
      "title": "Event recorder demo, autoplaying a presentation from a gist",
      "include": [
        "qx.theme.Modern",
        "qx.data.marshal.Json",
        "cboulanger.eventrecorder.UiController"
      ],
      "environment": {
        "eventrecorder.scriptable": true,
        "eventrecorder.gist_id": "64ed4149a27d48de38d9cb176907355e",
        "eventrecorder.autoplay": true
      }
    },
    {
      "class": "cboulanger.eventrecorder.demo.Application",
      "theme": "cboulanger.eventrecorder.theme.Theme",
      "name": "eventrecorder_tooltips",
      "title": "Event recorder demo with object id tooltips",
      "include": [
        "qx.theme.Modern",
        "qx.data.marshal.Json",
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdTooltip"
      ],
      "environment": {
        "eventrecorder.gist_id": "ae41a3c54b81c0447f1e152a5c6ba4f8"
      }
    },
    {
      "class": "cboulanger.eventrecorder.demo.Application",
      "theme": "cboulanger.eventrecorder.theme.Theme",
      "name": "eventrecorder_imports",
      "title": "Event recorder demo demonstrating the use of imports",
      "include": [
        "qx.theme.Modern",
        "qx.data.marshal.Json",
        "cboulanger.eventrecorder.UiController"
      ],
      "environment": {
        "eventrecorder.gist_id": "8a27af215845b16400e98328623b6c13",
        "eventrecorder.autoplay": true
      }
    },
    {
      "class": "qxl.widgetbrowser.Application",
      "theme": "qx.theme.Indigo",
      "name": "widgetbrowser_recorder",
      "title": "WidgetBrowser with autogenerated object ids, id tooltips and event recorder, showcasing the use of variables and macros",
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdGenerator",
        "cboulanger.eventrecorder.ObjectIdTooltip"
      ],
      "environment": {
        "qx.icontheme": [
          "Tango"
        ],
        "eventrecorder.show_progress": true,
        "eventrecorder.gist_id": "2ce4d5f7107661f1c53b146c498560aa",
        "eventrecorder.autoplay": true
      }
    },
    {
      "class": "cboulanger.eventrecorder.editor.Application",
      "theme": "qx.theme.Indigo",
      "name": "eventrecorder_scripteditor",
      "title": "Script Editor",
      "description": "The script editor in a separate browser window (doesn't work standalone)",
      "publish": false,
      "standalone": false,
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.player.*"
      ],
      "environment": {
        "qx.icontheme": [
          "Tango"
        ]
      }
    },
    {
      "class": "qxl.widgetbrowser.Application",
      "theme": "qx.theme.Indigo",
      "name": "widgetbrowser_externaleditor",
      "title": "WidgetBrowser with empty external script editor",
      "description": "This demo uses an external native window to display the script recorder and is compiled to have all eventrecorder-related code in a separate file ('part').",
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.UiController",
        "cboulanger.eventrecorder.ObjectIdGenerator",
        "cboulanger.eventrecorder.Loader"
      ],
      "environment": {
        "qx.icontheme": ["Tango"],
        "eventrecorder.show_progress": true,
        "eventrecorder.editor.placement": "outside"
      },
      "parts": {
        "boot": {
          "include": ["qx.*","qxl.*", "cboulanger.eventrecorder.Loader"]
        },
        "eventrecorder": {
          "include": ["qookery.*", "cboulanger.eventrecorder.*"],
          "exclude": ["cboulanger.eventrecorder.Loader"]
        }
      }
    },
    {
      "class": "qxl.widgetbrowser.Application",
      "theme": "qx.theme.Indigo",
      "name": "widgetbrowser_engine",
      "title": "WidgetBrowser using new decoupled architecture",
      "description": "This is the exmperimental new code architecture that tries to completely decouple UI and event recording. Work in progress!",
      "include": [
        "qx.theme.Modern",
        "cboulanger.eventrecorder.Engine",
        "cboulanger.eventrecorder.ObjectIdGenerator"
      ],
      "exclude": ["cboulanger.eventrecorder.UiController"],
      "environment": {
        "qx.icontheme": [
          "Tango"
        ],
        "eventrecorder.show_progress": true,
        "eventrecorder.editor.placement": "inside",
        "eventrecorder.uicontroller.placement": "inside"
      }
    },
    {
      "class": "qxl.apiviewer.Application",
      "theme": "qxl.apiviewer.Theme",
      "name": "apiviewer",
      "title": "Eventrecorder API Viewer",
      "environment": {
        "qx.icontheme": "Tango",
        "excludeFromAPIViewer": [
          "qxl.apiviewer.*"
        ]
      },
      "include": [
        "qx.*"
      ],
      "exclude": [
        "qx.test.*",
        "qx.module.Blocker",
        "qx.module.Placement"
      ]
    },
    {
      "class": "cboulanger.eventrecorder.window.TestApplication",
      "theme": "cboulanger.eventrecorder.theme.Theme",
      "name": "remote_binding_test",
      "title": "Application for testing remote binding",
      "description": "This is another experiment that is not part of the eventrecorder but tests new code for the framework that will be used in it.",
      "environment": {
        "qx.icontheme": "Tango"
      },
      "include": [
        "cboulanger.eventrecorder.window.*"
      ],
      "exclude": [
        "cboulanger.eventrecorder.window.TestApplicationNew",
        "qx.io.channel.*"
      ]
    }
  ]
}
